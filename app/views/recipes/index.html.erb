<p style="color: green"><%= notice %></p>

<h1>My Recipes</h1>

<div id="recipes">
<% if @recipes.empty? %>
  <p>No recipes available for this user</p>
<% else %>

  <% @recipes.each_with_index do |recipe, index| %>

    <%= render partial: 'recipe', locals: { recipe: recipe, index: index } %>

  <% end %>

<% end %>
</div>

<%= link_to "Add New recipe", new_recipe_path %>
